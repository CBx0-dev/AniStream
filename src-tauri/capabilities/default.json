{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        "https://*",
        "http://*"
      ]
    },
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    {
      "identifier": "fs:default",
      "allow": [
        "$APPDATA/*"
      ]
    },
    "fs:allow-appdata-write-recursive",
    "fs:allow-appdata-read-recursive",
    "fs:default",
    "http:default"
  ]
}